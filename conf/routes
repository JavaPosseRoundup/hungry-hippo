# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                          controllers.Application.index()
GET     /startCrawl                     controllers.Application.startCrawler()
GET     /stopCrawl                      controllers.Application.stopCrawler()
GET     /crawlStatus                    controllers.Application.crawlerStatus()

GET     /start                      controllers.Application.start
GET     /stop                       controllers.Application.stop
GET     /websocket/                 controllers.Application.indexWS


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
GET     /assets/javascripts/routes  controllers.Application.javascriptRoutes
